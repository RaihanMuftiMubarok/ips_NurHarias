<%- include('../partials/__head.ejs') %>

    <body>
        <div class="container-scroller">
            <!-- partial:partials/_navbar.html -->

            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="container mt-5">
                        <div class="row">
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="form-container  ">
                                    <form action="/anggota/update/<%= id %>" method="POST">
                                        <div class="card p-5">
                                            <h5 class="fw-bold">Informasi Pribadi</h5>
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex align-items-center gap-4">
                                                    <img id="previewFoto" src="/images/anggota/<%= data.foto %>" alt="Gambar Berita" style="width: 8rem;">
                                                    <label for="formFile" class="custom-file-label border" style="
                                                    padding: 8px 15px;
                                                    background-color: white;
                                                    color: black;
                                                    border-radius: 5px;
                                                    cursor: pointer;
                                                    display: inline-block;
                                                ">
                                                        <small class="text-dark">Pilih Foto</small>
                                                    </label>
                                                    <input type="file" class="form-control" id="formFile" name="foto"
                                                        style="max-width: 250px;" hidden>
                                                </div>
                                            </div>

                                            <div class="row">

                                                <div class="col-md-6 mb-3">
                                                    <label for="nama">Nama Anggota</label>
                                                    <input type="text" class="form-control" placeholder="Nama Lengkap"
                                                        id="nama" name="nama" value="<%= data.nama %>">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="tempat_tanggal_lahir">Tempat, Tanggal Lahir</label>
                                                    <input type="text" class="form-control"
                                                        placeholder="Tempat, Tanggal Lahir" id="tempat_tanggal_lahir"
                                                        name="tempat_tanggal_lahir"
                                                        value="<%= data.tempat_tanggal_lahir %>">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="jenis_kelamin">Jenis Kelamin</label>
                                                    <select class="form-select" id="jenis_kelamin" name="jenis_kelamin">
                                                        <option selected>
                                                            <%= data.jenis_kelamin %>
                                                        </option>
                                                        <option value="L">Laki-laki</option>
                                                        <option value="P">Perempuan</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="alamat">Alamat</label>
                                                    <input type="text" class="form-control" placeholder="Alamat"
                                                        id="alamat" name="alamat" value="<%= data.alamat %>">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="peminatan">Peminatan</label>
                                                    <select class="form-select" id="peminatan" name="peminatan">
                                                        <option selected>
                                                            <%= data.peminatan %>
                                                        </option>
                                                        <option value="tanding">Tanding</option>
                                                        <option value="seni">Seni</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="pendidikan_terakhir">Pendidikan Terakhir</label>
                                                    <input type="text" class="form-control"
                                                        placeholder="Pendidikan Terakhir" id="pendidikan_terakhir"
                                                        name="pendidikan_terakhir"
                                                        value="<%= data.pendidikan_terakhir %>">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="email">Email</label>
                                                    <input type="email" class="form-control" placeholder="Email"
                                                        id="email" name="email" value="<%= data.email %>">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="kontak">No Telepon</label>
                                                    <input type="text" class="form-control" placeholder="No. Telepon"
                                                        id="kontak" name="kontak" value="<%= data.kontak %>">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="tingkatan">Tingkatan</label>
                                                    <select class="form-select" id="tingkatan" name="tingkatan">
                                                        <option selected>
                                                            <%= data.tingkatan %>
                                                        </option>
                                                        <option value="hitam">hitam</option>
                                                        <option value="merah">merah</option>
                                                        <option value="biru">biru</option>
                                                        <option value="hijau">hijau</option>
                                                        <option value="oren">oren</option>
                                                        <option value="kuning">kuning</option>
                                                        <option value="putih">putih</option>
                                                        <option value="intan">intan</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="kontak">Tanggal Masuk</label>
                                                    <input type="text" class="form-control" id="tanggal_masuk"
                                                        name="tanggal_masuk" value="<%= data.tanggal_masuk %>" disabled
                                                        readonly>
                                                    <input type="hidden" name="tanggal_masuk"
                                                        value="<%= data.tanggal_masuk %>">

                                                </div>
                                            </div>
                                            <h5 class="fw-bold">Informasi Orang Tua/Wali</h5>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="ayah">Nama Ayah</label>
                                                    <input type="text" class="form-control" placeholder="Nama Ayah"
                                                        id="ayah" name="ayah" value="<%= data.ayah %>">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="ibu">Nama Ibu</label>
                                                    <input type="text" class="form-control" placeholder="Nama Ibu"
                                                        id="ibu" name="ibu" value="<%= data.ibu %>">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <button type="button" class="btn btn-secondary"
                                                    onclick="history.back()">Cancel</button>
                                                <button type="submit" class="btn btn-primary mr-2">Simpan</button>
                                                <!-- <label for="foto">Foto </label>
                                                    <input type="file" class="form-control" id="foto" name="foto" required > -->
                                            </div>
                                            <!-- <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="persetujuan">
                                    <label class="form-check-label" for="persetujuan">
                                        Saya Menyatakan bahwa Data yang diisikan Adalah Benar
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success">Daftar</button>
                            </div> -->

                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>

        <script>
            const inputFoto = document.getElementById("formFile");
            const previewFoto = document.getElementById("previewFoto");
        
            inputFoto.addEventListener("change", function () {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        previewFoto.src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });
        </script>
        
        <!-- container-scroller ends -->
        <%- include('../partials/__foot.ejs') %>
    </body>