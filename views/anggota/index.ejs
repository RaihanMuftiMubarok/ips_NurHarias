<%- include('../partials/__head.ejs') %>
<body>
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <%- include('../partials/__nav.ejs') %>
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Data Anggota</h4>
                                <a href="/anggota/create" class="btn btn-sm btn-success mb-3">Tambah</a>
                                <div class="table-responsive">
                                    <table class="table text-center">
                                        <thead>
                                            <tr>
                                                <th scope="col">No</th>
                                                <th scope="col">NIA</th>
                                                <th scope="col">No Pendaftaran</th>
                                                <th scope="col">Nama</th>
                                                <th scope="col">Jenis Kelamin</th>
                                                <th scope="col">Tingkatan</th>
                                                <th scope="col">Alamat</th>
                                                <th scope="col">Detail</th>
                                                <th colspan="2" scope="col">Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i=0; i < data.length; i++){ %>
                                            <tr>
                                                <th scope="row">
                                                    <%= (i+1) %>
                                                </th>
                                                <td>
                                                    <%= data[i].nia %>
                                                </td>
                                                <td>
                                                    <%= data[i].no_pendaftaran %>
                                                </td>
                                                <td>
                                                    <%= data[i].nama %>
                                                </td>
                                                <td>
                                                    <%= data[i].jenis_kelamin %>
                                                </td>
                                                <td>
                                                    <%= data[i].tingkatan %>
                                                </td>
                                                <td>
                                                    <%= data[i].alamat %>
                                                </td>
                                                <td>
                                                    <a href="/anggota/detail/<%= data[i].nia %>" class="btn btn-sm btn-secondary">Detail</a>
                                                </td>
                                                <td>
                                                    <td>
                                                        <div class="button-container">
                                                        <a href="/anggota/edit/<%= data[i].nia %>" class="btn btn-sm btn-warning"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><g fill="none" stroke="#ffff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path stroke-dasharray="20" stroke-dashoffset="20" d="M3 21h18"><animate fill="freeze" attributeName="stroke-dashoffset" dur="0.2s" values="20;0"/></path><path stroke-dasharray="48" stroke-dashoffset="48" d="M7 17v-4l10 -10l4 4l-10 10h-4"><animate fill="freeze" attributeName="stroke-dashoffset" begin="0.2s" dur="0.6s" values="48;0"/></path><path stroke-dasharray="8" stroke-dashoffset="8" d="M14 6l4 4"><animate fill="freeze" attributeName="stroke-dashoffset" begin="0.8s" dur="0.2s" values="8;0"/></path></g></svg></a>
                                                        <a href="/anggota/delete/<%= data[i].nia %>" class="btn btn-sm btn-danger">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><path fill="#ffff" d="M7 21q-.825 0-1.412-.587T5 19V6H4V4h5V3h6v1h5v2h-1v13q0 .825-.587 1.413T17 21zm2-4h2V8H9zm4 0h2V8h-2z"/></svg>
                                                        </a>
                                                    </div>
                                                    </td>
                                                </td>
                                                
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- container-scroller ends -->
<%- include('../partials/__foot.ejs') %>
</body>
