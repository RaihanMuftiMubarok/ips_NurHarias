<%- include('../partials/__head.ejs') %>
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f0f0f0;
    }

    .card-wrapper {
        width: 700px;
        height: 440px;
        margin: 40px auto;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        display: flex;
        flex-direction: column;
        background-color: white;
    }

    .card-header {
        background: linear-gradient(to right, #00712D, #19ce37);
        color: white;
        padding: 10px 30px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .card-header img {
        height: 80px;
    }

    .org-name {
        font-size: 20px;
        font-weight: bold;
    }

    .card-title {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin: 15px 0 0 0;
        color: #00712D;
    }

    .card-body {
        display: flex;
        padding: 5px 10px ;
        flex: 1;
        align-items: center;
    }

    .left-section {
        width: 280px;
        text-align: center;
    }

    .left-section img.profile {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 5px;
        border: 3px solid #ccc;
    }

    .qr-code img {
        width: 100px;
        height: 100px;
        padding-bottom: 10px;
    }

    .right-section {
        flex: 1;
        /* padding-left: 10px; */
        margin-top: -20px;
        margin-left: -20px;
        font-size: 16px;
        line-height: 1.8;
    }

    .right-section p {
        margin: 6px 0;
    }

    .right-section strong {
        display: inline-block;
        width: 150px;
    }

    .btn-group {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        margin: 0 5px;
    }
</style>

<body>
    <div class="card-wrapper">
        <!-- Header -->
        <div class="card-header">
            <img src="/images/logo.png" alt="Logo Organisasi">
            <div class="org-name">IPS NUR HARIAS RANTING TALANGO</div>
        </div>

        <!-- Title -->
        <div class="card-title">Kartu Tanda Anggota</div>

        <!-- Body -->
        <div class="card-body">
            <!-- Kiri -->
            <div class="left-section">
                <img src="/images/anggota/<%= data.foto %>" alt="Foto" class="profile">
                <div class="qr-code">
                    <img src="<%= qrCode %>" alt="QR Code">
                </div>
            </div>

            <!-- Kanan -->
            <div class="right-section">
                <p><strong>Nama</strong>: <%= data.nama %></p>
                <p><strong>NIA</strong>: <%= data.nia %></p>
                <p><strong>Tingkatan</strong>: <%= data.tingkatan %></p>
                <p><strong>Tanggal Masuk</strong>: <%= data.tanggal_masuk %></p>
            </div>
        </div>
    </div>

    <!-- Tombol -->
    <div class="btn-group">
        <button type="button" class="btn btn-secondary" onclick="history.back()">Kembali</button>
        <a href="/anggota/detail/<%= data.nia %>/kartu/download-image" class="btn btn-success">Download Kartu</a>
    </div>

    <%- include('../partials/__foot.ejs') %>
</body>
