<%- include('../partials/__head.ejs') %>
<body>
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <%- include('../partials/__nav.ejs') %>
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Data Berita</h4>
                                <a href="/berita/create" class="btn btn-sm btn-success mb-3">Tambah Berita</a>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Gambar</th>
                                                <th>Judul Berita</th>
                                                <th>Penulis</th>
                                                <th>Tanggal Posting</th>
                                                <th>Deskripsi Berita</th>
                                                <th colspan="2">Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i = 0; i < data.length; i++) { %>
                                            <tr>
                                                <th scope="row"><%= (i + 1) %></th>
                                                <td class="py-1">
                                                    <img src="/images/berita/<%= data[i].gambar %>" height="100" width="150" alt="Gambar berita"/>
                                                </td>
                                                <td><%= data[i].judul %></td>
                                                <td><%= data[i].nama_depan %></td>
                                                <td><%= data[i].tanggal_format %></td>
                                                <td><%= data[i].deskripsi.length > 20 ? data[i].deskripsi.substring(0, 20) + '...' : data[i].deskripsi %></td>
                                                <td>
                                                    <a href="/berita/edit/<%= data[i].id_berita %>" class="btn btn-sm btn-warning">Edit</a>
                                                    <a href="/berita/delete/<%= data[i].id_berita %>" class="btn btn-sm btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- container-scroller ends -->
<%- include('../partials/__foot.ejs') %>
</body>
