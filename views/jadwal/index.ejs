<%- include('../partials/__head.ejs') %>
<body>
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <%- include('../partials/__nav.ejs') %>
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Data Jadwal</h4>
                                <a href="/jadwal/create" class="btn btn-sm btn-success mb-3">Tambah</a>
                                <div class="table-responsive">
                                    <table class="table text-center">
                                        <thead>
                                            <tr>
                                                <th scope="col">No</th>
                                                <th scope="col">Jenis Latihan</th>
                                                <th scope="col">Minggu</th>
                                                <th scope="col">Hari</th>
                                                <th scope="col">Jam Mulai</th>
                                                <th scope="col">Jam Selesai</th>
                                                <th colspan="2" scope="col">Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i=0; i < data.length; i++){ %>
                                            <tr>
                                                <th scope="row">
                                                    <%= (i+1) %>
                                                </th>
                                                <td>
                                                    <%= data[i].nama_latihan %>
                                                </td>
                                                <td>
                                                    <%= data[i].minggu %>
                                                </td>
                                                <td>
                                                    <%= data[i].hari %>
                                                </td>
                                                <td>
                                                    <%= data[i].jam_mulai %>
                                                </td>
                                                <td>
                                                    <%= data[i].jam_selesai %>
                                                </td>
                                                <td>
                                                    <a href="/jadwal/edit/<%= data[i].id_jadwal %>" class="btn btn-sm btn-warning">Edit</a>
                                                    <a href="/jadwal/delete/<%= data[i].id_jadwal %>" class="btn btn-sm btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- container-scroller ends -->
<%- include('../partials/__foot.ejs') %>
</body>
