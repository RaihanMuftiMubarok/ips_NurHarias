<%- include('../partials/__head.ejs') %>

    <body>
        <div class="container-scroller">
            <!-- partial:partials/_navbar.html -->

            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="container mt-5">
                        <div class="row">
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="form-container  ">
                                    <form action="/pelatih/store" method="POST" enctype="multipart/form-data"
                                        class="forms-sample">
                                        <div class="card p-5">
                                            <h5 class="fw-bold">Informasi Pribadi</h5>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <input type="text" class="form-control" placeholder="Nama Lengkap"
                                                        id="nama" name="nama" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <input type="text" class="form-control"
                                                        placeholder="Tempat, Tanggal Lahir" id="tempat_tanggal_lahir"
                                                        name="tempat_tanggal_lahir" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <select class="form-select" id="jenis_kelamin" name="jenis_kelamin">
                                                        <option selected>Jenis Kelamin</option>
                                                        <option value="L">Laki-laki</option>
                                                        <option value="P">Perempuan</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <input type="text" class="form-control" placeholder="Alamat"
                                                        id="alamat" name="alamat" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <input type="text" class="form-control"
                                                        placeholder="Pendidikan Terakhir" id="pendidikan_terakhir"
                                                        name="pendidikan_terakhir" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <input type="email" class="form-control" placeholder="Email"
                                                        id="email" name="email" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <input type="text" class="form-control"
                                                        placeholder="No.Telepon   contoh:62332749088" id="kontak"
                                                        name="kontak" required>
                                                </div>
                                                <div class="col-md-6 mb-3">

                                                    <select class="form-select" id="tingkatan" name="tingkatan">
                                                        <option selected>
                                                            Tingkatan
                                                        </option>
                                                        <option value="hitam">hitam</option>
                                                        <option value="merah">merah</option>
                                                        <option value="biru">biru</option>
                                                        <option value="hijau">hijau</option>
                                                        <option value="oren">oren</option>
                                                        <option value="kuning">kuning</option>
                                                        <option value="putih">putih</option>
                                                        <option value="intan">intan</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <h5 class="fw-bold">Informasi Orang Tua/Wali</h5>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <input type="text" class="form-control" placeholder="Nama Ayah"
                                                        id="ayah" name="ayah" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <input type="text" class="form-control" placeholder="Nama Ibu"
                                                        id="ibu" name="ibu" required>
                                                </div>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label for="foto"><b>Foto </b></label>
                                                <input type="file" class="form-control" id="foto" name="foto" required>
                                            </div>
                                            <div class="form-group">
                                                <button type="button" class="btn btn-secondary"
                                                    onclick="history.back()">Cancel</button>
                                                <button type="submit" class="btn btn-primary mr-2">Simpan</button>

                                            </div>


                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>



        <!-- container-scroller ends -->
        <%- include('../partials/__foot.ejs') %>
    </body>