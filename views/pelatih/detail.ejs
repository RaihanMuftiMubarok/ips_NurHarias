    <body>
        <div class="container-scroller">
            <!-- partial:partials/_navbar.html -->

            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="container mt-5">
                        <div class="row">
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="form-container ">
                                    <div class="card p-4">
                                        <h5 class="fw-bold">Informasi Pribadi</h5>
                                        <div class="row align-items-center mb-3">
                                            <div class="col-auto">
                                                <img src="/images/pelatih/<%= data.foto %>" alt="foto" style="width: 8rem;">
                                            </div>
                                            <div class="col">
                                                <a class="btn btn-success" href="/images/pelatih/<%= data.foto %>" download="<%= data.foto %>">
                                                    Unduh Foto <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><path fill="#ffff" d="m12 16l-5-5l1.4-1.45l2.6 2.6V4h2v8.15l2.6-2.6L17 11zm-6 4q-.825 0-1.412-.587T4 18v-3h2v3h12v-3h2v3q0 .825-.587 1.413T18 20z"/></svg>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="row">

                                            <div class="col-md-6 mb-3">
                                                <label for="nama">Nama Pelatih</label>
                                                <input type="text" class="form-control" placeholder="Nama Lengkap"
                                                    id="nama" name="nama" value="<%= data.nama %>" disabled readonly>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="tempat_tanggal_lahir">Tempat, Tanggal Lahir</label>
                                                <input type="text" class="form-control"
                                                    placeholder="Tempat, Tanggal Lahir" id="tempat_tanggal_lahir"
                                                    name="tempat_tanggal_lahir" value="<%= data.tempat_tanggal_lahir %>"
                                                    disabled readonly>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="jenis_kelamin">Jenis Kelamin</label>
                                                <select class="form-select" id="jenis_kelamin" name="jenis_kelamin"
                                                    disabled readonly>
                                                    <option selected>
                                                        <%= data.jenis_kelamin %>
                                                    </option>
                                                    <option value="L">Laki-laki</option>
                                                    <option value="P">Perempuan</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="alamat">Alamat</label>
                                                <input type="text" class="form-control" placeholder="Alamat" id="alamat"
                                                    name="alamat" value="<%= data.alamat %>" disabled readonly>
                                            </div>

                                            <div class="col-md-6 mb-3">
                                                <label for="pendidikan_terakhir">Pendidikan Terakhir</label>
                                                <input type="text" class="form-control"
                                                    placeholder="Pendidikan Terakhir" id="pendidikan_terakhir"
                                                    name="pendidikan_terakhir" value="<%= data.pendidikan_terakhir %>"
                                                    disabled readonly>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="email">Email</label>
                                                <input type="email" class="form-control" placeholder="Email" id="email"
                                                    name="email" value="<%= data.email %>" disabled readonly>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="kontak">No Telepon</label>
                                                <input type="text" class="form-control" placeholder="No. Telepon"
                                                    id="kontak" name="kontak" value="<%= data.kontak %>" disabled
                                                    readonly>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="tingkatan">Tingkatan</label>
                                                <input type="text" class="form-control" placeholder="No. Telepon"
                                                    id="tingkatan" name="tingkatan" value="<%= data.tingkatan %>"
                                                    disabled readonly>
                                            </div>

                                        </div>
                                        <h5 class="fw-bold">Informasi Orang Tua/Wali</h5>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="ayah">Nama Ayah</label>
                                                <input type="text" class="form-control" placeholder="Nama Ayah"
                                                    id="ayah" name="ayah" value="<%= data.ayah %>" disabled readonly>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="ibu">Nama Ibu</label>
                                                <input type="text" class="form-control" placeholder="Nama Ibu" id="ibu"
                                                    name="ibu" value="<%= data.ibu %>" disabled readonly>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button type="button" class="btn btn-secondary"
                                                onclick="history.back()">back</button>
                                            <!-- <label for="foto">Foto </label>
                                                    <input type="file" class="form-control" id="foto" name="foto" required > -->
                                        </div>
                                        <!-- <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="persetujuan">
                                    <label class="form-check-label" for="persetujuan">
                                        Saya Menyatakan bahwa Data yang diisikan Adalah Benar
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success">Daftar</button>
                            </div> -->

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- container-scroller ends -->
        <%- include('../partials/__foot.ejs') %>
    </body>